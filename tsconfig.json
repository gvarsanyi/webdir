{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src.old",
    "declaration": true,
    "esModuleInterop": true,
    "module": "ES2022",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "outDir": "js/",
    "paths": {
      "*": [
        "node_modules/*",
        "src.old/*"
      ]
    },
    "sourceMap": true,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
}